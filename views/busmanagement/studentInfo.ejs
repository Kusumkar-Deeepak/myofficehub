<body>
  
  <div class="container">
    <div class="header">
      <h1>Student Details</h1>
    </div>

    <div class="student-image">
      <% if (student && student.studentImage) { %>
        <img src="data:image/jpeg;base64,<%= student.studentImage.toString('base64') %>" alt="Student Image">
      <% } else { %>
        <p>No image available</p>
      <% } %>
    </div>
    

    <div class="student-info">
      <div class="info-section">
        <p><strong>Name:</strong> <%= student.name %></p>
        <p><strong>Class:</strong> <%= student.class %></p>
        <p><strong>Home Address:</strong> <%= student.homeAddress %></p>
        <p><strong>Roll No:</strong> <%= student.rollNo %></p>
        <p><strong>Enrollment No:</strong> <%= student.enrollmentNo %></p>
      </div>

      <div class="info-section">
        <p><strong>Bus Name:</strong> <%= student.busName %></p>
        <p><strong>Bus Route:</strong> <%= student.busRoute %></p>
        <p><strong>Bus Driver Name:</strong> <%= student.busDriverName %></p>
        <p><strong>Total Fees:</strong> <%= student.totalFees %></p>
        <p><strong>Total Fees Paid:</strong> <%= student.totalFeesPaid %></p>
        <p><strong>Total Fees Remaining:</strong> <%= student.totalFeesRemained %></p>
        <p><strong>Year:</strong> <%= student.year %></p>
      </div>

      <!-- <button id="downloadBtn" class="buttonDownload">Download PDF</button> -->
      <button class="ui-btn" id="downloadBtn">
        <span>
          Download PDF 
        </span>
      </button>
      <button id="updateBtn" onclick="openUpdateForm('<%= student._id %>')">Update Student</button>
      <button id="deleteBtn" onclick="deleteStudent('<%= student.enrollmentNo %>')">Delete Student</button>
    </div>

    

  
    <script src="/javascripts/busmanagement/updDel.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
    <script>
    document.getElementById('downloadBtn').addEventListener('click', function () {
  // Clone the container without buttons
  const contentToDownload = document.querySelector('.container').cloneNode(true);
  contentToDownload.querySelector('#downloadBtn').remove();
  contentToDownload.querySelector('#updateBtn').remove();
  contentToDownload.querySelector('#deleteBtn').remove();

  // Remove the <h1>Student Details</h1> element
  const h1Element = contentToDownload.querySelector('.header h1');
  if (h1Element) {
    h1Element.remove();
  }

  // Create a new <h1>Student Details</h1> element
  const newH1Element = document.createElement('h1');
  newH1Element.textContent = 'Student Details';
  newH1Element.style.textAlign = 'center';
  newH1Element.style.marginTop = '0';

  // Insert the new <h1> element above the image
  const studentImage = contentToDownload.querySelector('.student-image');
  studentImage.insertAdjacentElement('beforebegin', newH1Element);

  // Apply styles to the cloned content
  contentToDownload.style.borderRadius = '10px';
  contentToDownload.style.padding = '20px';
  contentToDownload.style.marginTop = '20px';
  contentToDownload.style.marginLeft = 'auto';
  contentToDownload.style.marginRight = 'auto';
  contentToDownload.style.background = 'linear-gradient(135deg, #165cff, #f68084)';
  contentToDownload.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.2)';

  // Center the content
  contentToDownload.style.display = 'flex';
  contentToDownload.style.flexDirection = 'column';
  contentToDownload.style.alignItems = 'center';

  // Apply styles to individual sections
  const infoSections = contentToDownload.querySelectorAll('.info-section');
  infoSections.forEach(section => {
    section.style.flex = '0 1 calc(100% - 20px)';
    section.style.marginBottom = '20px';
  });

  // Apply additional styles as needed...

  const studentName = '<%= student.name %>'; // Get student name from backend
  const options = {
    margin: 10,
    filename: `${studentName}_information.pdf`, // Set filename dynamically
    image: { type: 'jpeg', quality: 0.98 },
    html2canvas: { scale: 2 },
    jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
  };

  html2pdf()
    .from(contentToDownload)
    .set(options)
    .save();
});
</script>
