</body>

<div id="button">
    <button onclick="" id="downloadBtn">Download As A PDF !!</button>
 </div>
 <script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>

<!-- Inside your EJS template -->
<script>
document.getElementById('downloadBtn').addEventListener('click', function () {
    const studentName = '<%= resdata.name %>';
    const content = document.querySelector('.rescontainer');
    const options = {
        margin: 10,
        filename: `${studentName}_certificate.pdf`, // Set filename dynamically
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
    };

    html2pdf()
        .from(content)
        .set(options)
        .save();
});
</script>
</html>