<script>
  document.addEventListener("DOMContentLoaded", function() {
  const yearSelect = document.getElementById('year');
  const marksFields = document.getElementById('marks-fields');

  yearSelect.addEventListener('change', function() {
    const selectedYear = yearSelect.value;
    marksFields.innerHTML = ''; // Clear existing fields

    let numSemesters;
    if (selectedYear === '1st') {
      numSemesters = 2;
    } else if (selectedYear === '2nd') {
      numSemesters = 4;
    } else if (selectedYear === '3rd') {
      numSemesters = 6;
    }

    for (let i = 1; i <= numSemesters; i++) {
      const label = document.createElement('label');
      label.textContent = `Enter marks for semester ${i}:`;

      const input = document.createElement('input');
      input.type = 'text';
      input.name = `semester_${i}_marks`; // Assigning appropriate names

      marksFields.appendChild(label);
      marksFields.appendChild(input);
      marksFields.appendChild(document.createElement('br'));
    }
  });
});


